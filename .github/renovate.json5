{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:best-practices",
    ":semanticCommitTypeAll(deps)",
    ":semanticCommitScopeDisabled",
    "schedule:weekly",
    "group:allNonMajor",
    // Importante: pinea los digestos de GitHub Actions a versiones específicas
    "helpers:pinGitHubActionDigests",
  ],
  // Habilitar explícitamente el manager de GitHub Actions
  enabledManagers: [
    "github-actions",
    "gradle",
    "gradle-wrapper",
    "npm",
    "pnpm",
    "maven",
  ],
  semanticCommitType: "deps",
  semanticCommitScope: "",
  labels: ["type|dependency-upgrade", "pr|deps"],
  // Ignorar solo directorios de tests, no workflows de GitHub
  ignorePaths: ["**/__tests__/**"],
  pinDigests: true,
  ignoreUnstable: false,
  minimumReleaseAge: "7 days",
  dependencyDashboard: true,
  vulnerabilityAlerts: {
    enabled: true,
  },
  osvVulnerabilityAlerts: true,
  // Automerge para updates menores y parches (no majors)
  automerge: true,
  automergeStrategy: "squash",
  packageRules: [
    // Reglas para GitHub Actions - importante para actualizar actions
    {
      description: "Automerge GitHub Actions minor/patch updates",
      matchManagers: ["github-actions"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
    },
    {
      description: "Group major GitHub Actions updates",
      matchManagers: ["github-actions"],
      matchUpdateTypes: ["major"],
      groupName: "GitHub Actions (major)",
      automerge: false,
    },
    // Reglas para archivos de version libs
    {
      matchFileNames: ["**/rcLibs.versions.toml"],
      allowedVersions: "!/(-M|-m|-beta|-Beta|-BETA|-alpha|-Alpha|-ALPHA|-snapshot|-Snapshot|-SNAPSHOT)/",
    },
    {
      matchFileNames: ["**/betaLibs.versions.toml"],
      allowedVersions: "!/(-alpha|-Alpha|-ALPHA|-snapshot|-Snapshot|-SNAPSHOT)/",
    },
    {
      matchFileNames: ["**/alphaLibs.versions.toml"],
      allowedVersions: "!/(-snapshot|-Snapshot|-SNAPSHOT)/",
    },
    // Mantenimiento de lock files para docs
    {
      matchManagers: ["npm", "pnpm"],
      matchFileNames: ["docs/website/**"],
      lockFileMaintenance: {
        enabled: true,
      },
    },
    // Agrupaciones de paquetes específicos
    {
      matchPackageNames: ["org.gradlex.**"],
      groupName: "gradlex",
    },
    {
      matchPackageNames: ["org.jetbrains.kotlin.**"],
      groupName: "kotlin",
    },
    {
      matchPackageNames: ["org.springframework.boot.**"],
      groupName: "spring boot",
    },
  ],
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["\\.versions\\.toml$"],
      matchStrings: ['(^|\\n)gradle *= *"(?<currentValue>[^"]*)"'],
      depNameTemplate: "gradle",
      datasourceTemplate: "gradle-version",
    },
    {
      customType: "regex",
      managerFilePatterns: ["\\.versions\\.toml$"],
      matchStrings: ['(^|\\n)node *= *"(?<currentValue>[^"]*)"'],
      depNameTemplate: "node",
      datasourceTemplate: "node-version",
    },
    {
      customType: "regex",
      managerFilePatterns: ["\\.versions\\.toml$"],
      matchStrings: ['(^|\\n)kotlin *= *"(?<currentValue>[^"]*)"'],
      depNameTemplate: "org.jetbrains.kotlin:kotlin-stdlib",
      datasourceTemplate: "maven",
    },
    {
      customType: "regex",
      managerFilePatterns: ["\\.versions\\.toml$"],
      matchStrings: ['(^|\\n)jdk *= *"(?<currentValue>[^"]*)"'],
      depNameTemplate: "java",
      datasourceTemplate: "java-version",
    },
    {
      customType: "regex",
      managerFilePatterns: ["gradle/**/InternalDependencies\\.kt"],
      matchStrings: [
        '[a-zA-Z0-9_]+\\s*=\\s*\\{\\s*module\\s*=\\s*"(?<depName>[^" ]+)"\\s*,\\s*version\\s*=\\s*"(?<currentValue>[^" ]+)"\\s*,\\s*type\\s*=\\s*"(?<datasource>[^" ]+)"[^}]*\\}',
      ],
    },
  ],
}
